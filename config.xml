<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.hello" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>HelloOlive</name>
  <description>
    A sample Apache Cordova application that responds to the deviceready event.
  </description>
  <author email="dev@cordova.apache.org" href="http://cordova.io">
    Apache Cordova Team
  </author>
  <content src="index.html" />
  <plugin name="cordova-plugin-whitelist" version="1" />
  <access origin="*" />
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />
  <allow-intent href="geo:*" />
  <platform name="android">
    <allow-intent href="market:*" />
    <!-- Icons -->
    <icon src="res/android/ldpi/appicon.png" density="ldpi" />
    <icon src="res/android/mdpi/appicon.png" density="mdpi" />
    <icon src="res/android/hdpi/appicon.png" density="hdpi" />
    <icon src="res/android/xhdpi/appicon.png" density="xhdpi" />
    <icon src="res/android/xxhdpi/appicon.png" density="xxhdpi" />
    <icon src="res/android/xxhdpi/appicon.png" density="xxxhdpi" />
    <!-- Splash Screens (Landscape) -->
    <splash src="res/android/ldpi/splash-land.png" density="land-ldpi" />
    <splash src="res/android/mdpi/splash-land.png" density="land-mdpi" />
    <splash src="res/android/hdpi/splash-land.png" density="land-hdpi" />
    <splash src="res/android/xhdpi/splash-land.png" density="land-xhdpi" />
    <splash src="res/android/xxhdpi/splash-land.png" density="land-xxhdpi" />
    <splash src="res/android/xxxhdpi/splash-land.png" density="land-xxxhdpi" />
    <!-- Splash Screens (Portrait) -->
    <splash src="res/android/ldpi/splash-port.png" density="port-ldpi" />
    <splash src="res/android/mdpi/splash-port.png" density="port-mdpi" />
    <splash src="res/android/hdpi/splash-port.png" density="port-hdpi" />
    <splash src="res/android/xhdpi/splash-port.png" density="port-xhdpi" />
    <splash src="res/android/xxhdpi/splash-port.png" density="port-xxhdpi" />
    <splash src="res/android/xxxhdpi/splash-port.png" density="port-xxxhdpi" />
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*" />
    <allow-intent href="itms-apps:*" />
    <!-- iOS 8.0+ -->
    <!-- iPhone 6 Plus  -->
    <icon src="res/ios/appicon/icon-60@3x.png" width="180" height="180" />
    <!-- iOS 7.0+ -->
    <!-- iPhone / iPod Touch  -->
    <icon src="res/ios/appicon/icon-60.png" width="60" height="60" />
    <icon src="res/ios/appicon/icon-60@2x.png" width="120" height="120" />
    <!-- iPad -->
    <icon src="res/ios/appicon/icon-76.png" width="76" height="76" />
    <icon src="res/ios/appicon/icon-76@2x.png" width="152" height="152" />
    <!-- iOS 6.1 -->
    <!-- Spotlight Icon -->
    <icon src="res/ios/appicon/icon-40.png" width="40" height="40" />
    <icon src="res/ios/appicon/icon-40@2x.png" width="80" height="80" />
    <!-- iPhone / iPod Touch -->
    <icon src="res/ios/appicon/icon.png" width="57" height="57" />
    <icon src="res/ios/appicon/icon@2x.png" width="114" height="114" />
    <!-- iPad -->
    <icon src="res/ios/appicon/icon-72.png" width="72" height="72" />
    <icon src="res/ios/appicon/icon-72@2x.png" width="144" height="144" />
    <!-- iPhone Spotlight and Settings Icon -->
    <icon src="res/ios/appicon/icon-small.png" width="29" height="29" />
    <icon src="res/ios/appicon/icon-small@2x.png" width="58" height="58" />
    <!-- iPad Spotlight and Settings Icon -->
    <icon src="res/ios/appicon/icon-50.png" width="50" height="50" />
    <icon src="res/ios/appicon/icon-50@2x.png" width="100" height="100" />
    <!-- Splash Screens -->
    <splash src="res/ios/splash/Default~iphone.png" width="320" height="480" />
    <splash src="res/ios/splash/Default@2x~iphone.png" width="640" height="960" />
    <splash src="res/ios/splash/Default-Portrait~ipad.png" width="768" height="1024" />
    <splash src="res/ios/splash/Default-Portrait@2x~ipad.png" width="1536" height="2048" />
    <splash src="res/ios/splash/Default-Landscape~ipad.png" width="1024" height="768" />
    <splash src="res/ios/splash/Default-Landscape@2x~ipad.png" width="2048" height="1536" />
    <splash src="res/ios/splash/Default-568h@2x~iphone.png" width="640" height="1136" />
    <splash src="res/ios/splash/Default-667h.png" width="750" height="1334" />
    <splash src="res/ios/splash/Default-736h.png" width="1242" height="2208" />
    <splash src="res/ios/splash/Default-Landscape-736h.png" width="2208" height="1242" />
  </platform>
  <!--
  AutoHideSplashScreen false doesn't work on Android, and SplashScreenDelay doesn't work on iOS.
  Therefore, forcing a long wait (i.e. 999999) to keep the splash screen.
  Then later on, the app will make the splash screen hide. (See: src/app/config/run.js)
  -->
  <preference name="AutoHideSplashScreen" value="false" />
  <preference name="SplashScreenDelay" value="999999" />
  <preference name="SplashMaintainAspectRatio" value="true" />
  <preference name="ShowSplashScreenSpinner" value="false" />
  <plugin name="cordova-plugin-splashscreen" spec="~2.1.0" />
  <plugin name="cordova-plugin-statusbar" spec="~1.0.1" />
  <plugin name="cordova-plugin-inappbrowser" spec="~1.0.1" />
  <plugin name="cordova-plugin-device" spec="~1.0.1" />
</widget>
